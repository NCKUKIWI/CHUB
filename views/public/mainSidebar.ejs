<div class="ui sidebar right inverted vertical menu" id="mainSidebar">
  <div class="ui centered grid" style="padding-top:50px; margin:10px;">
      <% if(!me){ %>
        <div id="loginPart">
          <form class="ui form" id="loginForm">
            <div class="field">
              <div id="errormsg"></div>
            </div>
            <div class="field">
              <label>Email</label>
              <input type="text" name="userid" placeholder="Email">
            </div>
            <div class="field">
              <label>Password</label>
              <input type="password" name="password" placeholder="Password">
            </div>
            <div class="ui button" id="loginSubmit">Login</div>
            <a class="ui button" href="/users/fblogin">FB Login</a>
          </form>
        </div>
        <div id="signupPart">
          <form class="ui form" id="signupForm">
              <div class="field">
                  <div id="errormsg"></div>
              </div>
              <div class="field">
                  <label>Email</label>
                  <input type="text" name="email" placeholder="Email">
              </div>
              <div class="field">
                  <label>Password</label>
                  <input type="password" name="password" placeholder="Password">
              </div>
              <div class="field">
                  <label>UserID</label>
                  <input type="text" name="userid" placeholder="User ID">
              </div>
              <div class="field">
                  <label>Name</label>
                  <input type="text" name="username" placeholder="Name">
              </div>
              <div class="ui button" id="signupSubmit">Signup</div>
          </form>
        </div>
      <% }else{ %>
        <%= me.Name %>
      <% } %>
  </div>
</div>
