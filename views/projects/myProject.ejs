<% layout('../public/layout') %>
<div id="All_project">
  <div class="head">
    <h1>Project</h1>
    <h2>C-Hub is a creative space came about from the interconnection among Creativity, Human, Urban, and Buidling Environment.</h2>
    <a class="ui button searchbtn">Search</a>
    <a class="ui button"  href="/projects/create">Create</a>
  </div>
  <div class="results">
    <p>My Project</p>

    <div class="ui special cards">
      <% for(var i in projects){ %>
      <div class="card">
        <div class="blurring dimmable image">
          <div class="ui inverted dimmer">
          <div class="content">
            <div class="center">
              <div class="ui primary button info" project-id="<%= projects[i]._id %>">Info</div>
            </div>
          </div>
          </div>
          <img src="../assets/images/project.png">
        </div>
        <div class="content">
          <a class="header" href="/projects/<%= projects[i]._id %>"><%= projects[i].Name %></a>
          <div class="meta">
          <span class="date">Type: <%= projects[i].Type %></span>
          </div>
        </div>
        <div class="extra content">
          <a>
          <i class="users icon"></i>
          <%= projects[i].MemberID.length %> members
          </a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
  <% for(var i in projects){ %>
  <div class="ui modal <%= projects[i]._id %>">
    <i class="close icon"></i>
    <div class="header">
      <%= projects[i].Name %>
    </div>
    <div class="image content">
      <div class="ui medium image">
        <img src="../assets/images/project.png">
      </div>
      <div class="description">
        <p>Location: </p>
        <p>Type: </p>
        <p>duration </p>
        <p>Need </p>
        <p>Introduction: </p>
        <p>Mission: </p>
        <p>Contributor: </p>
        <p>Sponsor: </p>
        <p>Activities: </p>
        <p>Teammate: </p>
      </div>
    </div>
    <div class="actions">
      <div class="ui blue button">
        Text Me
      </div>
      <div class="ui blue button">
        Sharing
      </div>
    </div>
  </div>
  <% } %>
</div>

<script>
$(document).ready(function(){
    $('.info').on('click', function(){
        var id = this.getAttribute('project-id');
        $('.ui.modal.' + id).modal('show');
    })
});
</script>
