<% layout('../public/layout') %>
<div id="All_activity">
  <div class="head">
    <h1>Activity</h1>
    <h2>C-Hub is a creative space came about from the interconnection among Creativity, Human, Urban, and Buidling Environment.</h2>
    <a class="ui button searchbtn">search</a>
  </div>
  <div class="results">
    <p>Activity 總覽</p>

    <div class="ui special cards">
      <% for(var i in activity){ %>
      <div class="card">
        <div class="blurring dimmable image">
          <div class="ui inverted dimmer">
          <div class="content">
            <div class="center">
              <div class="ui primary button info" activity-id="<%= activity[i]._id %>">Info</div>
            </div>
          </div>
          </div>
          <img src="../assets/images/project.png">
        </div>
        <div class="content">
          <a class="header"><%= activity[i].Name %></a>
          <div class="meta">
          <span class="date">Type: <%= activity[i].Type %></span>
          </div>
        </div>
        <div class="extra content">
          <a>
          <i class="users icon"></i>
          <%= activity[i].MemberID.length %> members
          </a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
  <% for(var i in activity) { %>
  <div class="ui modal <%= activity[i]._id %>">
    <i class="close icon"></i>
    <div class="header">
      <%= activity[i].Name %>
    </div>
    <div class="image content">
      <div class="ui medium image">
        <img src="../assets/images/project.png">
      </div>
      <div class="description">
        <p>Pics&Video: </p>
        <p>Introduction: </p>
        <p>Type: </p>
        <p>Conditions</p>
        <p>Map: </p>
        <p>TimeTable: </p>
        <p>Mission</p>
        <p>Guest: </p>
        <p>News</p>
        <p>Group(sponsor)</p>
      </div>
    </div>
    <div class="actions">
      <% if(me && activity[i].AdminID.indexOf(me._id)!=-1){ %>
        <div class="ui red button delactivity" project-id="<%= activity[i]._id %>">Delete</div>
        <a class="ui green button" href="/activities/edit/<%= activity[i]._id %>">Edit</a>
      <% } %>
      <div class="ui blue button">
        Text Me
      </div>
      <div class="ui blue button">
        Sharing
      </div>
    </div>
  </div>
  <% } %>
</div>

<script>
$(document).ready(function(){
  $('.info').on('click', function(){
    var id = this.getAttribute('activity-id');
    $('.ui.modal.' + id).modal('show');
  });

  $('.delactivity').on('click', function(){
    var id = this.getAttribute('activity-id');
    $.ajax({
      url: "/activities/delete/"+id,
      type: "POST",
      success: function(response) {
        if(response=="ok"){
          toastr.success("刪除成功");
          setTimeout(function(){
            window.location.href = window.location.href;
          },3000);
        }
      }
    });
  });
});
</script>
