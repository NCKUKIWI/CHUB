  </p>
  <p id="detail_location">
    <p class="title">Location</p><span>/</span>
    <p class="short"><%= activity.Location %></p>
    <div class="botton tiny">MAP</div>
  </p>
  <p id="detail_intro">
    <p class="title with_space">Introduction</p><span>/</span>
    <p class="long">
      <%- activity.Introduction.replace(/\r\n/g, '<br/>') %>
      <!-- 123123<br/>123123<br/>123123<br/>123123<br/>123123<br/>123123<br/>123123<br/>123123<br/>123123<br/>123123<br/>123123<br/>123123<br/>123123<br/>123123</p> -->
  </p>
  <!-- <p id="detail_mission">
    <p class="title with_space">Mission</p><span>/</span>
    <p class="long">
      123123<br/>123123<br/>123123<br/>123123<br/>123123<br/>123123<br/>123123<br/>123123<br/>123123<br/>123123<br/>123123<br/>123123<br/>123123<br/>123123</p>
  </p> -->
  <p id="detail_contributer"><br/>
    <p class="title">Contributer</p><span>/</span>
    <p class="short"><%= activity.Contributor %></p>
  </p>
  <p id="detail_activities">
    <p class="title with_space">News</p><span>/</span>
    <p class="long"></p>
  </p>
</div>
<div class="bottom_icons" activity-id="<%= activity._id %>">
  <div class="round_icon join"></div>
  <div class="round_icon interest"></div>
  <div class="round_icon share"></div>
  <div class="round_icon text"></div>
</div>
<a href="#" class="close_icon" id="close_window">　</a>
<div class="float_pic_window">
  <svg class="slideshow_btn disabled" id="go_prev" width="20">
    <line id="line_1" x1="20" y1="0" x2="0" y2="10" />
    <line id="line_2" x1="20" y1="20" x2="0" y2="10" />
  </svg>
  <svg class="slideshow_btn" id="go_next" width="20">
    <line id="line_1" x1="0" y1="0" x2="20" y2="10" />
    <line id="line_2" x1="0" y1="20" x2="20" y2="10" />
  </svg>
  <div id="view_all_pic">
    <img class="gallery_view_pic end" src="/assets/images/view_pic_end.png">
    <img class="gallery_view_pic" id="pic_1" onclick="window.open('/uploads/activity/<%= activity._id %>/logo.png?<%= new Date().getTime() %>')" src="/uploads/activity/<%= activity._id %>/logo.png?<%= new Date().getTime() %>">
    <% for(var i = 0; i < activity.Photo.length; i++) { %>
      <img class="gallery_view_pic" id="pic_<%= i + 2 %>" onclick="window.open('<%= activity.Photo[i] %>?<%= new Date().getTime() %>')" src="<%= activity.Photo[i] %>?<%= new Date().getTime() %>">
    <% } %>
    <img class="gallery_view_pic end" src="/assets/images/view_pic_end.png">
  </div>
  <div class="view_pic_counter">
    <span class="pic_counter now">01</span><span class="pic_counter total"><%= activity.Photo.length + 1%></span>
  </div>
  <a href="#" class="close_icon" id="close_pic_view">　</a>
</div>

<script>
$(document).ready(function(){
  $('.joinActivity').on('click', function(){
    var id = this.getAttribute('activity-id');
    $.ajax({
      url: "/activities/join/",
      type: "POST",
      data:{
        activity_id:id
      },
      success: function(response) {
        toastr.success("申請成功");
        setTimeout(function(){
          window.location.href = window.location.href;
        },3000);
      }
    });
  });

  $('.quitActivity').on('click', function(){
    var id = this.getAttribute('activity-id');
    $.ajax({
      url: "/activities/quit/",
      type: "POST",
      data:{
        activity_id:id
      },
      success: function(response) {
        toastr.success("退出成功");
        setTimeout(function(){
          window.location.href = window.location.href;
        },3000);
      }
    });
  });

  $('.delActivity').on('click', function(){
    var id = this.getAttribute('activity-id');
    $.ajax({
      url: "/activities/delete/"+id,
      type: "DELETE",
      success: function(response) {
        if(response=="ok"){
          toastr.success("刪除成功");
          setTimeout(function(){
            window.location.href = window.location.href;
          },3000);
        }
      }
    });
  });
});
</script>